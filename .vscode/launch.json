	"version": "0.2.0",
	"configurations": [
		{
			"name": "Runner tutorial.py",
			"type": "debugpy",
			"request": "launch",
			"module": "edifice",
			"justMyCode": true,
			"args": ["examples/tutorial.py", "MyApp"]
		},
		{
			"name": "Runner --inspect tutorial.py",
			"type": "debugpy",
			"request": "launch",
			"module": "edifice",
			"justMyCode": true,
			"args": ["--inspect", "examples/tutorial.py", "MyApp"]
		},
		{
			"name": "Runner --inspect calculator.py",
			"type": "debugpy",
			"request": "launch",
			"module": "edifice",
			"justMyCode": true,
			"args": ["--inspect", "examples/calculator.py", "Main"]
		},
		{
			"name": "Runner financial_charts.py",
			"type": "debugpy",
			"request": "launch",
			"module": "edifice",
			"justMyCode": true,
			"args": ["examples/financial_charts.py", "Main"]
		},
		{
			"name": "Runner --inspect todomvc.py",
			"type": "debugpy",
			"request": "launch",
			"module": "edifice",
			"justMyCode": true,
			"args": ["--inspect", "examples/todomvc.py", "Main"]
		},
		{
			"name": "Runner --inspect todomvc.py Adwaita:light",
			"type": "debugpy",
			"request": "launch",
